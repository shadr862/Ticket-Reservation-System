{
  "openapi": "3.0.4",
  "info": {
    "title": "Ticket Reservation API",
    "description": "API for Bus Ticket Reservation System",
    "version": "v1"
  },
  "paths": {
    "/api/Booking/{busScheduleId}/seatplan": {
      "get": {
        "tags": [
          "Booking"
        ],
        "parameters": [
          {
            "name": "busScheduleId",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string",
              "format": "uuid"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "OK"
          }
        }
      }
    },
    "/api/Booking": {
      "post": {
        "tags": [
          "Booking"
        ],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/BookSeatInputDto"
              }
            },
            "text/json": {
              "schema": {
                "$ref": "#/components/schemas/BookSeatInputDto"
              }
            },
            "application/*+json": {
              "schema": {
                "$ref": "#/components/schemas/BookSeatInputDto"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "OK"
          }
        }
      }
    },
    "/api/Bus/add-full": {
      "post": {
        "tags": [
          "Bus"
        ],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/AddFullBusDto"
              }
            },
            "text/json": {
              "schema": {
                "$ref": "#/components/schemas/AddFullBusDto"
              }
            },
            "application/*+json": {
              "schema": {
                "$ref": "#/components/schemas/AddFullBusDto"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "OK"
          }
        }
      }
    },
    "/api/Bus": {
      "get": {
        "tags": [
          "Bus"
        ],
        "responses": {
          "200": {
            "description": "OK"
          }
        }
      }
    },
    "/api/Search": {
      "get": {
        "tags": [
          "Search"
        ],
        "parameters": [
          {
            "name": "from",
            "in": "query",
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "to",
            "in": "query",
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "journeyDate",
            "in": "query",
            "schema": {
              "type": "string",
              "format": "date-time"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "OK"
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "AddFullBusDto": {
        "type": "object",
        "properties": {
          "companyName": {
            "type": "string",
            "nullable": true
          },
          "busName": {
            "type": "string",
            "nullable": true
          },
          "totalSeats": {
            "type": "integer",
            "format": "int32"
          },
          "from": {
            "type": "string",
            "nullable": true
          },
          "to": {
            "type": "string",
            "nullable": true
          },
          "journeyDate": {
            "type": "string",
            "format": "date-time"
          },
          "startTime": {
            "type": "string",
            "format": "date-span"
          },
          "arrivalTime": {
            "type": "string",
            "format": "date-span"
          },
          "price": {
            "type": "number",
            "format": "double"
          }
        },
        "additionalProperties": false
      },
      "BookSeatInputDto": {
        "type": "object",
        "properties": {
          "busScheduleId": {
            "type": "string",
            "format": "uuid"
          },
          "seatIds": {
            "type": "array",
            "items": {
              "type": "string",
              "format": "uuid"
            },
            "nullable": true
          },
          "passengerName": {
            "type": "string",
            "nullable": true
          },
          "passengerMobile": {
            "type": "string",
            "nullable": true
          },
          "boardingPoint": {
            "type": "string",
            "nullable": true
          },
          "droppingPoint": {
            "type": "string",
            "nullable": true
          }
        },
        "additionalProperties": false
      }
    }
  }
}